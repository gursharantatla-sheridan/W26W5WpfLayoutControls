<Window x:Class="W26W5WpfLayoutControls.CanvasExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W26W5WpfLayoutControls"
        mc:Ignorable="d"
        Title="CanvasExample" Height="450" Width="800">
    <Canvas>
        <Label Content="Label" Canvas.Left="71" Canvas.Top="91"/>
        <TextBox x:Name="txtFirstName" Canvas.Left="114" TextWrapping="Wrap" Canvas.Top="95" Width="120"/>
        <Button x:Name="btnShow" Content="Show" Canvas.Left="252" Canvas.Top="95" HorizontalAlignment="Left" VerticalAlignment="Center" Width="78" Click="btnShow_Click"/>
        <Button x:Name="btnShowGridExample" Content="Show Grid Example" Canvas.Left="114" Canvas.Top="188" Height="83" Width="190" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnShowGridExample_Click"/>

    </Canvas>
</Window>
